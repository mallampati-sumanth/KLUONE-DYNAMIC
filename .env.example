# KLU ONE - Environment Configuration Template
# Copy this file to .env and update with your actual values

# Flask Configuration
SECRET_KEY=your-secret-key-change-this-in-production-use-random-string
FLASK_ENV=development
FLASK_DEBUG=True

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your_mysql_password_here
DB_NAME=klu_one_db

# Full Database URI
# Format: mysql+pymysql://USER:PASSWORD@HOST:PORT/DATABASE
DATABASE_URI=mysql+pymysql://root:your_mysql_password_here@localhost:3306/klu_one_db

# Session Configuration
SESSION_LIFETIME_HOURS=24

# Admin Configuration
ADMIN_EMAIL=admin@klu.ac.in
ADMIN_PASSWORD=admin123

# Application Configuration
PORT=5000
HOST=0.0.0.0

# CORS Configuration
CORS_ORIGINS=http://localhost:5000,http://127.0.0.1:5000

# For Production (Change these!)
# SECRET_KEY=<generate-a-strong-random-key>
# FLASK_ENV=production
# FLASK_DEBUG=False
# DB_PASSWORD=<strong-database-password>
# ADMIN_PASSWORD=<strong-admin-password>
